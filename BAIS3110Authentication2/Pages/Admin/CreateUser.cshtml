@page
@model BAIS3110Authentication.Pages.Admin.CreateUserModel
@{
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
<h1 class="display-4">Admin - Create User</h1>
<hr class="my-4">
<div>
    <h4 class="alert-success">@Model.FormMessage</h4>
    <span class="alert-danger">@Model.ErrorMessage</span>
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Email" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Role" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary btn-sm">Create User</button>
        </div>
    </form>
</div>